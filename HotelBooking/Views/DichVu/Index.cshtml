@model IEnumerable<HotelBooking.Models.DichVu>

@{
    ViewData["Title"] = "Danh sách Dịch Vụ";
}

<h2 class="text-center">Danh sách Dịch Vụ</h2>

<p class="text-end">
    <a asp-action="Create" class="btn btn-primary">+ Thêm Dịch Vụ</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Tên Dịch Vụ</th>
            <th>Giá</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.KieuDichVu)</td>
                <td>@Html.DisplayFor(modelItem => item.Gia)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.MaDV" class="btn btn-sm btn-warning">Sửa</a>
                    <a asp-action="Delete" asp-route-id="@item.MaDV" class="btn btn-sm btn-danger">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
