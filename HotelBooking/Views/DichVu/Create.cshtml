@model HotelBooking.Models.DichVu

@{
    ViewData["Title"] = "Thêm/Sửa dịch vụ";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="@ViewContext.RouteData.Values["action"]" method="post">
    <div class="form-group">
        <label>Kiểu dịch vụ</label>
        <input asp-for="KieuDichVu" class="form-control" />
        <span asp-validation-for="KieuDichVu" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Giá</label>
        <input asp-for="Gia" class="form-control" />
        <span asp-validation-for="Gia" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary mt-2">Lưu</button>
    <a asp-action="Index" class="btn btn-secondary mt-2">Hủy</a>
</form>
