@model HotelBooking.Models.ThongKe

@{
    ViewData["Title"] = "Thống kê";
}

<h2 class="mt-3">Thống kê ngày: @Model.NgayThongKe.ToString("dd/MM/yyyy")</h2>

<form method="get" asp-action="Index">
    <div class="form-group mb-3">
        <label>Chọn ngày thống kê:</label>
        <input type="date" name="ngay" class="form-control" value="@Model.NgayThongKe.ToString("yyyy-MM-dd")" />
    </div>
    <button type="submit" class="btn btn-primary">Xem thống kê</button>
</form>

<table class="table table-bordered mt-4">
    <tr>
        <th>Tổng doanh thu</th>
        <td>@Model.TongDoanhThu.ToString("N0") VND</td>
    </tr>
    <tr>
        <th>Tổng số lượt đặt phòng</th>
        <td>@Model.TongSoLuotDatPhong</td>
    </tr>
    <tr>
        <th>Tổng số dịch vụ sử dụng</th>
        <td>@Model.TongSoDichVuSuDung</td>
    </tr>
</table>
