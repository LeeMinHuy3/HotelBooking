@model IEnumerable<HotelBooking.Models.Phong>
@{
    ViewData["Title"] = "Danh sách phòng";
}
<h2>@ViewData["Title"]</h2>
<p>
    <a asp-action="Create" class="btn btn-success">Thêm Phòng</a>
</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Mã Phòng</th>
            <th>Loại Phòng</th>
            <th>Giá Phòng</th>
            <th>Trạng Thái</th>
            <th>Hành Động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MaP</td>
                <td>@item.LoaiPhong?.LoaiPhongName</td>
                <td>@item.GiaPhong</td>
                <td>@item.TrangThai</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.MaP" class="btn btn-warning">Sửa</a> |
                    <a asp-action="Delete" asp-route-id="@item.MaP" class="btn btn-danger">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
