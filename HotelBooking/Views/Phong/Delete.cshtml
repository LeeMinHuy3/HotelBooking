@model HotelBooking.Models.Phong
@{
    ViewData["Title"] = "Xóa phòng";
}
<h2>@ViewData["Title"]</h2>
<h3>Bạn có chắc muốn xóa phòng @Model.MaP?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">Loại phòng:</dt>
        <dd class="col-sm-10">@Model.LoaiPhong?.LoaiPhongName</dd>
        <dt class="col-sm-2">Giá phòng:</dt>
        <dd class="col-sm-10">@Model.GiaPhong</dd>
        <dt class="col-sm-2">Trạng thái:</dt>
        <dd class="col-sm-10">@Model.TrangThai</dd>
    </dl>
    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="MaP" />
        <button type="submit" class="btn btn-danger">Xóa</button>
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </form>
</div>
