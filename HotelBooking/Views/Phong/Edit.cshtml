@model HotelBooking.Models.Phong
@{
    ViewData["Title"] = "Chỉnh sửa phòng";
}
<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="MaP" />

    <div class="form-group">
        <label asp-for="MaLP">Loại phòng</label>
        <select asp-for="MaLP" class="form-control" asp-items="ViewBag.MaLP"></select>
        <span asp-validation-for="MaLP" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="GiaPhong">Giá phòng</label>
        <input asp-for="GiaPhong" class="form-control" />
        <span asp-validation-for="GiaPhong" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TrangThai">Trạng thái</label>
        <input asp-for="TrangThai" class="form-control" />
        <span asp-validation-for="TrangThai" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
