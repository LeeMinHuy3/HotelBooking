@model IEnumerable<HotelBooking.Models.LoaiPhong>

@{
    ViewData["Title"] = "Loại Phòng";
}

<h1>Loại Phòng</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Thêm Loại Phòng</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Mã Loại</th>
            <th>Tên Loại Phòng</th>
            <th>Thao Tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MaLP</td>
                <td>@item.LoaiPhongName</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.MaLP" class="btn btn-primary btn-sm">Sửa</a>
                    <a asp-action="Delete" asp-route-id="@item.MaLP" class="btn btn-danger btn-sm">Xoá</a>
                </td>
            </tr>
        }
    </tbody>
</table>
