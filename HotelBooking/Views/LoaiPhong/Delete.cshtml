@model HotelBooking.Models.LoaiPhong

@{
    ViewData["Title"] = "Xóa Loại Phòng";
}

<h2>Xóa Loại Phòng</h2>

<h4>Bạn có chắc chắn muốn xóa loại phòng này?</h4>
<div>
    <h5>@Model.LoaiPhongName</h5>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="MaLP" />
    <button type="submit" class="btn btn-danger">Xóa</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>
