@model HotelBooking.Models.LoaiPhong

@{
    ViewData["Title"] = "Chỉnh sửa Loại Phòng";
}

<h2>Chỉnh sửa Loại Phòng</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="MaLP" />

    <div class="form-group">
        <label asp-for="LoaiPhongName" class="control-label"></label>
        <input asp-for="LoaiPhongName" class="form-control" />
        <span asp-validation-for="LoaiPhongName" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Lưu</button>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>
